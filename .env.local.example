# Auth0 Configuration (Required)
AUTH0_SECRET=use-a-long-random-string-here-32-chars-minimum
AUTH0_BASE_URL=http://localhost:3000
AUTH0_ISSUER_BASE_URL=https://your-auth0-domain.auth0.com
AUTH0_CLIENT_ID=your-auth0-client-id
AUTH0_CLIENT_SECRET=your-auth0-client-secret

# Database Configuration (Required)
# Choose one of these database providers:

# Option 1: Supabase (Recommended)
# DATABASE_URL="postgresql://postgres:[password]@[host]:5432/postgres"

# Option 2: Neon
# DATABASE_URL="postgresql://[user]:[password]@[host]/[database]"

# Option 3: Railway
# DATABASE_URL="postgresql://postgres:[password]@[host]:5432/railway"

# Option 4: Your own PostgreSQL
# DATABASE_URL="postgresql://username:password@localhost:5432/yah_admin"

# Optional: Direct URL for connection pooling (recommended for production)
# DIRECT_URL="postgresql://username:password@host:5432/database_name"

# Slack Configuration (Optional - for chat feature)
SLACK_BOT_TOKEN=xoxb-your-slack-bot-token
SLACK_SIGNING_SECRET=your-slack-signing-secret

# Application Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret